<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.askew.sean.mealplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".config.ConfigSettingsActivity"
            android:label="@string/title_activity_config_settings" />
        <activity
            android:name=".dailymealplancalendar.DailyMealPlanCalendarActivity"
            android:label="@string/title_activity_view_calendar" />
        <activity
            android:name=".mealviewactivity.MealViewActivity"
            android:label="@string/title_activity_view_meals" />
        <activity
            android:name=".recipeviewactivity.RecipeViewActivity"
            android:label="@string/title_activity_view_recipes" />
        <activity
            android:name=".mealrecipesview.MealRecipesViewActivity"
            android:label= "Recipes for the Meal" />
        <activity
            android:name=".generatedailymealplanactivity.GenDailyMealPlanActivity"
            android:label="@string/title_activity_gen_mealplan" />
        <activity
            android:name=".dailymealplan.MainActivity"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>